<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <!-- Metodo de persistencia -->
    <context-param>
        <param-name>persistenceMethod</param-name>
        <param-value>MySQL</param-value>
    </context-param>
    <!-- Nombre del recurso JNDI -->
    <context-param>
        <param-name>resourceName</param-name>
        <param-value>jdbc/VolanteFeliz</param-value>
    </context-param>
    <!-- Nombre de la Base de datos -->
    <context-param>
        <param-name>nameBD</param-name>
        <param-value>***</param-value>
    </context-param>
    <filter>
        <filter-name>ToolFilter</filter-name>
        <filter-class>control.ToolFilter</filter-class>
    </filter>
    <filter>
        <filter-name>StafFilter</filter-name>
        <filter-class>control.StafFilter</filter-class>
    </filter>
    <filter>
        <filter-name>AdministrationFilter</filter-name>
        <filter-class>control.AdministrationFilter</filter-class>
    </filter>
    <filter>
        <filter-name>GeneratePDFBillFilter</filter-name>
        <filter-class>control.GeneratePDFBillFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>ToolFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>StafFilter</filter-name>
        <url-pattern>/staf/*</url-pattern>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
        <dispatcher>INCLUDE</dispatcher>
        <dispatcher>ERROR</dispatcher>
    </filter-mapping>
    <filter-mapping>
        <filter-name>GeneratePDFBillFilter</filter-name>
        <url-pattern>/staf/billFolder/*</url-pattern>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
        <dispatcher>INCLUDE</dispatcher>
        <dispatcher>ERROR</dispatcher>
    </filter-mapping>
    <filter-mapping>
        <filter-name>AdministrationFilter</filter-name>
        <url-pattern>/staf/administration/*</url-pattern>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
        <dispatcher>INCLUDE</dispatcher>
        <dispatcher>ERROR</dispatcher>
    </filter-mapping>
    <listener>
        <description>ServletContextListener</description>
        <listener-class>control.StartListener</listener-class>
    </listener>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>control.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>control.LogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>NewClientServlet</servlet-name>
        <servlet-class>control.staf.NewClientServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteClientServlet</servlet-name>
        <servlet-class>control.staf.DeleteClientServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GenerateBillServlet</servlet-name>
        <servlet-class>control.staf.GenerateBillServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EditClientServlet</servlet-name>
        <servlet-class>control.staf.EditClientServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PayBillServlet</servlet-name>
        <servlet-class>control.staf.PayBillServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>NewEmployeeServlet</servlet-name>
        <servlet-class>control.administration.NewEmployeeServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>NewRentStage1Servlet</servlet-name>
        <servlet-class>control.staf.NewRentStage1Servlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>NewRentStage2Servlet</servlet-name>
        <servlet-class>control.staf.NewRentStage2Servlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EndRentServlet</servlet-name>
        <servlet-class>control.staf.EndRentServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>NewClientServlet</servlet-name>
        <url-pattern>/staf/newclient</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteClientServlet</servlet-name>
        <url-pattern>/staf/delclient</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GenerateBillServlet</servlet-name>
        <url-pattern>/staf/genbill</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EditClientServlet</servlet-name>
        <url-pattern>/staf/editclient</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PayBillServlet</servlet-name>
        <url-pattern>/staf/paybill</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>NewEmployeeServlet</servlet-name>
        <url-pattern>/staf/administration/newempl</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>NewRentStage1Servlet</servlet-name>
        <url-pattern>/staf/newrent_1</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>NewRentStage2Servlet</servlet-name>
        <url-pattern>/staf/newrent_2</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EndRentServlet</servlet-name>
        <url-pattern>/staf/endrent</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <resource-ref>
        <res-ref-name>jdbc/VolanteFeliz</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
        <res-sharing-scope>Shareable</res-sharing-scope>
    </resource-ref>
    <error-page>
        <error-code>404</error-code>
        <location>/WEB-INF/errorPage/error404.jsp</location>
    </error-page>
    <error-page>
        <error-code>500</error-code>
        <location>/WEB-INF/errorPage/error500.jsp</location>
    </error-page>
</web-app>
